{
	"manifest_version": 2,

	"name": "JumpToOrOpen",
	"description": "Menu of common pages that I want to jump to the existing open tab, or if it doesn't exist, then open it in a new tab",
	"version": "0.3.1",

	"homepage_url": "https://github.com/duncantl/JumpToOrOpen",

	"permissions": [
	    "tabs",
	    "activeTab",
//	    "storage",
	    "scripting"
	],

      "background": {
          "scripts": ["hotkeys.js", "functions.js"],  
          "persistent": true
      },

       "content_scripts": [
           {  "matches": [ "*://*/" ],
	      "js": ["functions.js", "catchAllLinks.js"]
	   }
       ],

       "browser_action": {
	   "default_icon": "images/icons8-arrow-64.png",
	   "default_popup": "popup.html"
       },

	"browser_specific_settings": {
	  "gecko": {
	      "id": "oasisgh@gs.ucdavis.edu"
//              "update_url": "https://www.stat.ucdavis.edu/~duncan/FirefoxExtensions/oasisgradhub.json"
           }
	},

       "commands": {
	   "gradProgs": {
	       "suggested_key": {
		   "default": "MacCtrl+G"
	       }
	   },
	   "oasis": {
	       "suggested_key": {
		   "default": "MacCtrl+O"
	       }
	   }	,
	   "prm": {
	       "suggested_key": {
		   "default": "MacCtrl+P"
	       }
	   }	,
	   "gmail": {
	       "suggested_key": {
		   "default": "MacCtrl+E"
	       }
	   },
	   "calendar": {
	       "suggested_key": {
		   // C doesn't work
		   "default": "MacCtrl+L" 
	       }
	   },
	   "nytimes": {
	       "suggested_key": {
		   "default": "MacCtrl+Y"
	       }
	   },
	   "washpost": {
	       "suggested_key": {
		   "default": "MacCtrl+W"
	       }
	   },
	   "hackerNews": {
	       "suggested_key": {
		   "default": "MacCtrl+H"
	       }
	   }
       }
}
